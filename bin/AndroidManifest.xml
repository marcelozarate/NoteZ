<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.marcelozarate.notez"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar" >
        <activity
            android:name="com.marcelozarate.notez.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.marcelozarate.notez.AddNoteActivity"
            android:label="@string/title_activity_add_note" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.marcelozarate.notez.MainActivity" />
        </activity>
        <activity
            android:name="com.marcelozarate.notez.EditNoteActivity"
            android:label="@string/title_activity_edit_note" >
        </activity>
    </application>

</manifest>
